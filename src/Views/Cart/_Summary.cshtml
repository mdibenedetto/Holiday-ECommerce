
@using dream_holiday.Controllers;
@using dream_holiday.Data;
@inject UserManager<ApplicationUser> userManager
@using Microsoft.AspNetCore.Identity

@inject ApplicationDbContext context

@{
    //List<Cart> list;
    //= new CartController().GetCart();
    //var Model = list.FirstOrDefault();
    var Model = new Cart();
}


<div class="col-md-4 order-md-2 mb-4">
    <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-muted">Your cart</span>
        <span class="badge badge-secondary badge-pill">3</span>
    </h4>
    <ul class="list-group mb-3">

        <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
                <h6 class="my-0"> @(Model.TravelPackage.Name) </h6>
                <small class="text-muted">Brief description</small>
            </div>
            <span class="text-muted"> 780 &euro;</span>
        </li>
        <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
                <h6 class="my-0">@(Model.TravelPackage.Description)</h6>
                <small class="text-muted">Brief description</small>
            </div>
            <span class="text-muted"> 540 &euro;</span>
        </li>
        <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
                <h6 class="my-0">@(Model.Qty)</h6>
                <small class="text-muted">Brief description</small>
            </div>
            <span class="text-muted">620 &euro;</span>
        </li>
        <li class="list-group-item d-flex justify-content-between bg-light">
            <div class="text-success">
                <h6 class="my-0">Promo code</h6>
                <small>EXAMPLECODE</small>
            </div>
            <span class="text-success">- 50 &euro;</span>
        </li>
        <li class="list-group-item d-flex justify-content-between">
            <span>Total </span>
            <strong>2540 &euro;</strong>
        </li>
    </ul>

    <form class="card p-2">
        <div class="input-group">
            <input type="text"
                   class="form-control"
                   placeholder="Promo code" />
            <div class="input-group-append">
                <button type="submit" class="btn btn-secondary">Redeem</button>
            </div>
        </div>
    </form>
</div>
