
@{
    ViewData["Title"] = "Cart";
}

<link rel="stylesheet" href="./css/cart.css" />
<section class="main-container">
    <section class="frame cart-container container mb-4">
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col" class="col-image"></th>
                                <th scope="col" class="col-product">
                                    Holiday package name
                                </th>
                                <th scope="col" class="col-available">Available</th>
                                <th scope="col" class="text-center col-quantity">
                                    Quantity
                                </th>
                                <th scope="col" class="text-right col-price">Price</th>
                                <th class="col-remove"></th>
                            </tr>
                        </thead>
                        <tbody class="cart-body">
                            <template id="product-item">
                                <tr>
                                    <td>
                                        <img class="item-image" src="{IMAGE_URL}" />
                                    </td>
                                    <td>
                                        <a class="item-title" href="./holiday-detail.html">
                                            {ITEM_TITLE}
                                        </a>
                                    </td>
                                    <td class="item-in-stock">{QTY_STOCK}</td>
                                    <td>
                                        <input class="form-control" type="text" value="1" />
                                    </td>
                                    <td class="item-price text-right">{PRICE €}</td>
                                    <td class="text-right">
                                        <button class="btn btn-sm btn-danger">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            </template>
                            <script>
                    const cartBody = document.querySelector(".cart-body");
                    const temp = document.querySelector(
                      "template#product-item"
                    );

                    const items = [1, 2, 3, 4, 5];
                    const lorem = `Lorem ipsum dolor sit amet consectetur adipisicing elit. Exercitationem, aspernatur!`;

                    items.forEach((item, i) => {
                      const clone = temp.content.cloneNode(true);
                      clone.querySelector(".item-image").src =
                        "https://dummyimage.com/50x50/0b6ec24f/fff&text=DH";
                      clone.querySelector(".item-title").innerHTML =
                        "<strong> Holiday package name </strong>" + item + "<br /> " + lorem;
                      clone.querySelector(".item-in-stock").textContent =
                        "In stock";
                      clone.querySelector(".item-price").textContent =
                        1000 + (i + 1) * 3 + " €";
                      cartBody.appendChild(clone);
                    });
                            </script>
                        </tbody>

                        <tfoot>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>Sub-Total</td>
                                <td class="text-right">255,90 €</td>
                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>Shipping</td>
                                <td class="text-right">6,90 €</td>
                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td><strong>Total</strong></td>
                                <td class="text-right"><strong>346,90 €</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <div class="col mb-2">
                <div class="row justify-content-end">
                    <div class="col-sm-12 col-lg-2">
                        <a href="holiday.html" class="btn btn-block btn-light">
                            Continue Shopping
                        </a>
                    </div>
                    <div class="col-sm-12 col-lg-2 text-right">
                        <a href="./checkout-cart.html"
                           class="btn-checkout btn btn-lg btn-block btn-success text-uppercase">
                            Checkout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>