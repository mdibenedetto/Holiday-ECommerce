@using dream_holiday.Models.ViewModel;
@model HolidayViewModel;

@{ ViewData["Title"] = "Holidays"; }

<script id="package-travel">
  let holidayItems=@(
       Json.Serialize( ViewBag.holidayItems)
  )
</script>

<link rel="stylesheet" href="/css/holiday.css" />

<section class="main-container">
    <div class="container">
        <div class="row">
            <div class="col-8 container">
                <!-- SUB TEMPLATE -->
                <template id="holiday-item">
                    <div class="col-sm-6">
                        <div class="card mb-3" style="max-width: 540px;">
                            <div class="row no-gutters">
                                <div class="col-md-6">
                                    <a class="item-link" href="holiday-detail.html?id=1">
                                        <img src="https://via.placeholder.com/174x157.png/012542?text=Image-1"
                                             class="item-image img-fluid card-img"
                                             alt="..." />
                                    </a>
                                </div>
                                <div class="col-md-6">
                                    <div class="card-body">
                                        <h5 class="card-title item-title">Card title</h5>
                                        <p class="card-text item-content">
                                            This is a wider card with supporting text below as a
                                            natural lead-in to additional content. This content is a
                                            little bit longer.
                                        </p>

                                        <a href="holiday-detail.html?id=1"
                                           class="item-link card-link">Detail</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </template>
                <!-- SUB TEMPLATE -->
                <div class="row" id="holiday-container">

                </div>
            </div>

            <div class="col-4">
                <h1>FILTERS</h1>
                <form id="formFilter" method="get">
                    @*<div class="form-group">
                            <label for="exampleFormControlSelect1">Stars Hotol</label>
                            <select class="form-control" id="exampleFormControlSelect1">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>*@
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="chkAllDestination" checked />
                        <label class="form-check-label" for="chkAllDestination">All Destinations</label>
                    </div>
                    <div class="form-group">
                        <label for="destinations">Destination</label>
                        <select multiple class="form-control" id="destinations" data-disabled>
                            @foreach (var country in Model.CountryNames)
                            {
                                <option value="@country">@country</option>
                            }
                            @*<option value="Lituania">Lituania</option>
                                <option value="Croatia">Croatia</option>
                                <option value="Romania">Romania</option>
                                <option value="Ireland">Ireland</option>
                                <option value="Italy">Italy</option>
                                <option value="Barcelona">Barcelona</option>
                                <option value="Moscow">Moscow</option>
                                <option value="Thailand">Thailand</option>
                                <option value="New Zealand">Zealand</option>
                                <option value="Goa">Goa</option>
                                <option value="France">France</option>
                                <option value="Canada">Canada</option>
                                <option value="Turkey">Turkey</option>
                                <option value="Egypt">Egypt</option>
                                <option value="Japan">Japan</option>
                                <option value="Brazil">Brazil</option>*@
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="price-range">
                            Price Range
                            <strong id="price"></strong>
                        </label>
                        <input type="range"
                               class="form-control-range"
                               id="price-range"
                               min="0"
                               value="0" />
                    </div>
                    <div class="form-group">
                        <button id="btnSearch"
                                type="button"
                                class="btn btn-lg btn-block btn-success">
                            Search
                        </button>
                    </div>
                </form>
                <!-- end filter -->
            </div>
        </div>
    </div>
</section>

<script src="/js/holiday.js"></script>
