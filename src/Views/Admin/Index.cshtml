@model List<(ApplicationUser user, bool isAdmin)>

@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> _userManager
@{
    var userId = (await _userManager.GetUserAsync(User)).Id;
}

<link rel="stylesheet" href="./css/admin.css" />

<section class="main-container">

    <table class="table">
        <thead>
            <tr>
                <th>
                    IsAdmin
                </th>
                <th>
                    UserName
                </th>
                <th>
                    Email
                </th>
                <th>
                    AccessFailedCount
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var elem in Model)
            {
                var item = elem.user;

                <tr>
                    <td>
                        @elem.isAdmin
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccessFailedCount)
                    </td>
                    <td>
                        @if (userId == item.Id)
                        {
                            <span>
                                No action for this user
                            </span>
                        }
                        else
                        {
                            if (elem.isAdmin)
                            {
                                <form asp-action="Downgrade" method="post">
                                    <input type="hidden" name="Id" value="@item.Id" />
                                    <input type="submit" value="Downgrade" class="btn btn-danger" /> 
                                </form>
                            }
                            else
                            {
                                <form asp-action="Upgrade" method="post">
                                    <input type="hidden" name="Id" value="@item.Id"  />
                                    <input type="submit" value="Upgrade" class="btn btn-success" /> 
                                </form>
                            }
                            <span>|</span>
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>

</section>